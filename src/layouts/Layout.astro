---
interface Props {
	title: string;
	description?: string;
	image?: string;
}
const { title, description = "A common description for web pages", image = "/images/default-image.png" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link href="/src/styles/global.css" rel="stylesheet">
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta property="og:image" content={image} />
		<title>{title}</title>
	</head>
		<slot />
	</body>
</html>

<style>
	@import "tailwindcss";
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
